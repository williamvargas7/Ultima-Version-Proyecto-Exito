@page
@model ConsolasExito.App.Presentacion.Pages.CrudEmpleado.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Empleado.Id" />
            <div class="form-group">
                <label asp-for="Empleado.Nombres" class="control-label"></label>
                <input asp-for="Empleado.Nombres" class="form-control" />
                <span asp-validation-for="Empleado.Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Apellidos" class="control-label"></label>
                <input asp-for="Empleado.Apellidos" class="form-control" />
                <span asp-validation-for="Empleado.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Edad" class="control-label"></label>
                <input asp-for="Empleado.Edad" class="form-control" />
                <span asp-validation-for="Empleado.Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Identidad" class="control-label"></label>
                <input asp-for="Empleado.Identidad" class="form-control" />
                <span asp-validation-for="Empleado.Identidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.sucursal" class="control-label"></label>
                <input asp-for="Empleado.sucursal" class="form-control" />
                <span asp-validation-for="Empleado.sucursal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Usuario" class="control-label"></label>
                <input asp-for="Empleado.Usuario" class="form-control" />
                <span asp-validation-for="Empleado.Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Password" class="control-label"></label>
                <input asp-for="Empleado.Password" class="form-control" />
                <span asp-validation-for="Empleado.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.RolPerson" class="control-label"></label>
                <select asp-for="Empleado.RolPerson" class="form-control">
                    <option >Seleccionar</option>
                    <option value="0">ADMINISTRADOR_COMPRAS</option>
                    <option value="1">ADMINISTRADOR_VENTAS</option>
                    <option value="2">ADMINISTRADOR_SISTEMA</option>
                    <option value="3">VENDEDOR</option>
                </select>
                <span asp-validation-for="Empleado.RolPerson" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Empleado.accesoReportes" /> @Html.DisplayNameFor(model => model.Empleado.accesoReportes)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
