@page
@model ConsolasExito.App.Presentacion.Pages.CambioPasswordModel
@{
}

<div class="row">
    <div class="col-md-4">

        <h2>Primer ingreso requiere cambio de contraseña</h2>

        <form method="post">


            <div class="form-group">
                <label class="Control.label">Nueva Contraseña</label>
                <input asp-for="Contrasenia"  type="password" class="form-control" placeholder="********"/>
                
            </div>
            <div class="form-group">
                <label class="Control.label">Verifique su contraseña</label>
                <input asp-for="RepeatContrasenia" type="password" class="form-control" placeholder="********" />
                <span class="text-danger">@Model.MensajeContrasenia</span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cambiar Contraseña" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>